<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/text</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
        <item name="tabSelectedTextColor">@color/text</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <declare-styleable name="CircleImageView">
        <attr name="civ_cropType" format="enum">
            <enum name="centerTop" value="0"/>
            <enum name="leftTop" value="1"/>
            <enum name="center" value="2"/>
        </attr>
        <attr name="civ_outCircleColor" format="color"/>
        <attr name="civ_outCircleWidth" format="dimension"/>
        <attr name="civ_innerCircleColor" format="color"/>
        <attr name="civ_innerCircleWidth" format="dimension"/>
    </declare-styleable>

    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground" >@color/translucent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
